<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- 自定义actionBar 的样式 -->
   
    <style name="DevondWatchActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarBackground</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        
        android:clipToPadding="true"
    </style>

    <style name="ActionBarBackground" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/light_blue_main</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="MenuTextStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">17sp</item>
    </style>
    

</resources>
